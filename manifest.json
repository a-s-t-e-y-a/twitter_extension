{
  "manifest_version": 3,
  "name": "Twitter Title Logger",
  "version": "1.0",
  "description": "Logs the title of Twitter tabs",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Twitter Title Logger"
  }
}